{
  "name": "@thisissoon/angular-image-loader",
  "version": "4.0.0",
  "description": "A simple progressive, responsive, lazy  image and video loading library for Angular that detects browser size and loads the appropriate image or video only when the element is in viewport. This package requires @thisissoon/angular-inviewport",
  "keywords": [
    "angular",
    "angular 5",
    "component",
    "image loader",
    "lazy",
    "loading",
    "image",
    "progressive",
    "responsive",
    "lazy",
    "video",
    "video loader",
    "responsive video"
  ],
  "author": "SOON_ <dorks@thisissoon.com>",
  "contributors": [
    "Ed Opare-Aryee <ed@thisissoon.com>",
    "Jack Matthews <jack@thisissoon.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thisissoon/angular-image-loader"
  },
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 5.5.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "coverage": "coveralls < coverage/lcov.info",
    "packagr": "ng-packagr -p package.json",
    "release": "standard-version",
    "postrelease": "npm run packagr"
  },
  "private": false,
  "dependencies": {},
  "peerDependencies": {
    "@angular/core": ">=5.0.0 <6.0.0 || >=5.0.0-beta <6.0.0",
    "@thisissoon/angular-inviewport": ">=2.2.0 <3.0.0",
    "rxjs": ">=5.0.0 <6.0.0"
  },
  "devDependencies": {
    "@angular/animations": "^5.2.5",
    "@angular/cli": "1.6.8",
    "@angular/common": "^5.2.5",
    "@angular/compiler": "^5.2.5",
    "@angular/compiler-cli": "^5.2.5",
    "@angular/core": "^5.2.5",
    "@angular/forms": "^5.2.5",
    "@angular/http": "^5.2.5",
    "@angular/language-service": "^5.2.5",
    "@angular/platform-browser": "^5.2.5",
    "@angular/platform-browser-dynamic": "^5.2.5",
    "@angular/router": "^5.2.5",
    "@thisissoon/angular-inviewport": "^2.2.0",
    "@types/jasmine": "~2.5.53",
